@page "/"
<div class="rpgui-content">
    @if (user is not null)
    {
        <p>
            Hello,
            @user.DisplayName
        </p>
    }
    else
    {
        <p>
            Checking authentication...
        </p>
    }
    <style>
        /* Set row/column count dynamically */
        .game-grid {
            grid-template: repeat(@gridSize, 1fr) / repeat(@gridSize, 1fr);
        }
    </style>
    <div class="game">
        <div class="game-grid">
            @for (int row = 0; row < gridSize; row++)
            {
                for (int col = 0; col < gridSize; col++)
                {
                    // Do not capture the loop variable in the onclick lambda
                    string location = Location(col, row);
                    <div class="game-grid-cell @ActiveClass(location)" @onclick="_ => OnClick(location)">
                        @*@sublocation*@
                        <span style="color: blue">
                            @Symbols(location, e => e.OwnerId == user.Id)
                        </span>
                        <span style="color: red">
                            @Symbols(location, e => e.OwnerId != user.Id)
                        </span>
                    </div>
                }
            }
        </div>
        <div class="game-detail rpgui-container framed">
            <h1>
                @DetailTitle
            </h1>
            @if (cellCharacters.Any())
            {
                <div class="game-detail-grid">
                    <div>
                        <h4>
                            Mine
                        </h4>
                        <div>
                            <button type="button" class="rpgui-button" @onclick="NewCharacter">
                                <span>New</span>
                            </button>
                            <button type="button" class="rpgui-button" @onclick="() => Move(0, -1)">
                                <span>&larr;</span>
                            </button>
                            <button type="button" class="rpgui-button" @onclick="() => Move(0, +1)">
                                <span>&rarr;</span>
                            </button>
                            <button type="button" class="rpgui-button" @onclick="() => Move(1, -1)">
                                <span>&uarr;</span>
                            </button>
                            <button type="button" class="rpgui-button" @onclick="() => Move(1, +1)">
                                <span>&darr;</span>
                            </button>
                        </div>
                        @foreach (var name in ActiveCellNames(myCharacters))
                        {
                            <span>
                                @name <br />
                            </span>
                        }
                    </div>
                    <div>
                        <h4>
                            Theirs
                        </h4>
                        @foreach (var name in ActiveCellNames(theirCharacters))
                        {
                            <span>
                                @name <br />
                            </span>
                        }
                    </div>
                </div>
            }
            else
            {
                <div>
                    <button type="button" class="rpgui-button" @onclick="NewCharacter">
                        <span>New Character</span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>
