@page "/"
<div class="rpgui-content">
    @if (user is not null)
    {
        <p>
            Hello,
            @user.DisplayName
        </p>
    }
    else
    {
        <p>
            Checking authentication...
        </p>
    }
    <style>
        /* Set row/column count dynamically */
        .game-grid {
            grid-template: repeat(@gridSize, 1fr) / repeat(@gridSize, 1fr);
        }
    </style>
    <div class="game">
        <div class="game-grid">
            @for (int row = 0; row < gridSize; row++)
            {
                for (int col = 0; col < gridSize; col++)
                {
                    // Must not capture the loop variable in the lambda
                    int c = col;
                    int r = row;
                    string sublocation = Sublocation(col, row);
                    <div class="game-grid-cell @ActiveClass(sublocation)" @onclick="_ => OnClick(c, r)">
                        @*@sublocation*@
                        <span>
                            @characterMap?[Location(col, row)].Count()
                        </span>
                    </div>
                }
            }
        </div>
        <div class="game-detail rpgui-container framed">
            <h1>
                @DetailTitle
            </h1>
            @if (cellCharacters.Any())
            {
                <div class="game-detail-grid">
                    <div>
                        <h4>
                            Mine
                        </h4>
                        <div>
                            <button type="button" class="rpgui-button" @onclick="NewCharacter">
                                <span>New</span>
                            </button>
                            <button type="button" class="rpgui-button" @onclick="Move">
                                <span>Move</span>
                            </button>
                        </div>
                        @foreach (var name in Names(myCharacters))
                        {
                            <span>
                                @name <br />
                            </span>
                        }
                    </div>
                    <div>
                        <h4>
                            Theirs
                        </h4>
                        @foreach (var name in Names(theirCharacters))
                        {
                            <span>
                                @name <br />
                            </span>
                        }
                    </div>
                </div>
            }
            else
            {
                <div>
                    <button type="button" class="rpgui-button" @onclick="NewCharacter">
                        <span>New Character</span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>
